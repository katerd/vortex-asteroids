        </button>
        <button name="modelPartClone" position="70,270" size="60,25">
            <label>Clone</label>
        </button>

        <checkbox position="10,250" name="includeInAnimation" value="true" />
        <label position="24,250"><text>Include in animation</text></label>

    </window>
</gui>